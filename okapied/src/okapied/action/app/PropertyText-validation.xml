<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
  <field name="property.propertyDetails.description">
      <field-validator type="stringlength">
         <param name="maxLength">5000</param>
         <param name="minLength">1</param>
         <message>The description can only be 5000 characters long</message>
     </field-validator>
     <field-validator type="requiredstring">
     	<message>Please enter a description for your property</message>
     </field-validator>
  </field>
  <field name="property.propertyDetails.checkInInstructions">
      <field-validator type="stringlength">
         <param name="maxLength">5000</param>
         <param name="minLength">1</param>
         <message>The check in instructions can only be 5000 characters long</message>
     </field-validator>
     <field-validator type="requiredstring">
     	<message>Please enter the check in instructions for your property</message>
     </field-validator>
  </field>
</validators>